{% extends 'base.html.twig' %}

{% block title %}MAMYSTÉRIK - PROFIL{% endblock %}

 {% block stylesheets %}
     <link href="{{ asset('css/profil.css') }}" rel="stylesheet" type="text/css"> <!-- LINK CSS PROFIL -->
 {% endblock %}

{% block body %}

    <section id="profil">
        <div class="profilStat" id="info">
            <img id="avatar" src="{{ asset('img/avatar/'~user.avatar) }}" alt="Photo avatar">
            <div>
                <p><span>Nom : </span>{{ user.lastName }}</p>
                <p><span>Prénom : </span>{{ user.firstName }}</p>
                <p><span>E-mail : </span>{{ user.email }}</p>
                <p><span>Inscription : </span>{{ user.createAt }}</p>
            </div>
            <a class="btn modif" href="{{ path('app_modify') }}">Modifier le profil</a>
        </div>
        <div class="profilStat" id="stats">
            <h2>Statistiques</h2>
            <div>
                <p><i class="fas fa-cookie-bite"></i> <span>Parties jouées : </span>{{ stats.parties }}</p>
                <p><i class="fas fa-cookie-bite"></i> <span>Victoires : </span>{{ stats.victoires }}</p>
                <p><i class="fas fa-cookie-bite"></i> <span>Défaites : </span>{{ stats.defaites }}</p>
                <p><i class="fas fa-cookie-bite"></i> <span>Rang : </span>{{ stats.rang }}</p>
            </div>
        </div>
        <div class="profilStat" id="partUser">
            <h2>Parties en cours</h2>
            <div>
                <p><i class="fas fa-cookie"></i><a class="btn" href="">Adversaire -> Crakito </a></p>

            </div>
        </div>
    </section>


    <script>
        const headerProfil = document.querySelectorAll('header')

        headerProfil.forEach((item) => {
            item.style.borderColor = colorshadow;
        })
    </script>

{% endblock %}



